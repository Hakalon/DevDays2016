            <li class="eng"><a href="https://www.microsoft.com/taiwan/events/devdays/eng/default.htm">ENGLISH</a></li>
        </ul>
    </nav>
    <div class="content wrapper">

        <h2 class="underline" style="margin-bottom:20px;">問題滿天飛！</h2>
        @*提問*@
        <div class="row" style="padding-bottom:15px;">
            @using (Html.BeginForm("Send", "Question"))
            {
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label for="ID_Name">姓名</label>
                            <input type="text" class="form-control" name="name" placeholder="王小明" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label for="Writing">內容：</label>
                            <textarea class="form-control" rows="3" style="width:100%; max-width: none;" name="content" placeholder="Content"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-info" style="width:100%;">送出</button>
                        </div>
                    </div>
            }
        </div>

        @*問題板*@
        <div class="row">

            @foreach (Question value in list)
            {
                <div class="message">
                    <div class="row" style="border: 1px solid #cccccc; border-radius: 4px; margin-left: 0px; margin-right:0px;" >
                        <div class="row" style="padding: 10px; margin-left:0px; margin-right:0px;">
                            
                            <div class="col-xs-12 text-left">
                                發問者：@value.Name
                            </div>
                            
                        </div>
                        <div class= "row" style="padding: 10px; margin-left: 15px; margin-right: 0px;">
                            <p class="col-xs-11" style="margin-left:15px">
                                @value.Content
                            </p>
                            
                            <img class="col-xs-1" src="~/images/sign.png" style="width:6%;">
                                                    
                        </div>
                     </div>
                 </div>
            }

        </div>


    </div>

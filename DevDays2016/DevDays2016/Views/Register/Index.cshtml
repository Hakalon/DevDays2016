            </li>
            <li class="eng"><a href="https://www.microsoft.com/taiwan/events/devdays/eng/default.htm">ENGLISH</a></li>
        </ul>
    </nav>

    @* 內容 *@
    <div class="content wrapper">

        <h2 class="underline">註冊</h2>
        <section>
            @using (Html.BeginForm("Send", "Register", FormMethod.Post))
            {
                <div class="col-md-6">
                    <h4>姓名</h4>
                    <input type="text" placeholder="王小明" />
                </div>
                <div class="col-md-6">
                    <h4>行動電話</h4>
                    <input type="tel" placeholder="0911-000-000" />
                </div>
                <div class="col-md-6">
                    <h4>Email</h4>
                    <input type="email" placeholder="DevDays@outlook.com" />
                </div>
                <div class="col-md-6">
                    <h4>暱稱</h4>
                    <input type="text" placeholder="小小明" />
                </div>
                <div class="col-md-12">
                    <h4>職業</h4>
                    <select>
                        <option value="工程師">工程師</option>
                        <option value="商務人士">商務人士</option>
                        <option value="設計師">設計師</option>
                        <option value="其他">其他</option>
                    </select>
                </div>
                //缺專長、照片
                <div >
                    <input style="aliam" type="submit" name="送出" />
                </div>     
            }
        </section>
    </div>
